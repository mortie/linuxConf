#!/bin/bash

##############################################################
## This script lets you copy/paste things on multiple OSes. ##
##############################################################

OS=$(uname)

if [ "$1" = "paste" ]; then
	if [ "$OS" = "Darwin" ]; then
		pbpaste
	else
		wl-paste
	fi

elif [ "$1" = "type" ]; then
	if [ "$OS" = "Darwin" ]; then
		echo "Unavailable on Darwin."
	else
		ydotool type -- $(mclip get)
	fi

elif [ "$1" = "get" ]; then
	if [ "$OS" = "Darwin" ]; then
		pbpaste
	else
		wl-paste | cat
	fi

else
	content=$(cat -)

	if [ "$OS" = "Darwin" ]; then
		printf "%s" "$content" | pbcopy
	else
		printf "%s" "$content" | wl-copy
	fi
fi
