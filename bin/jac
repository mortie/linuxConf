#!/bin/bash

err()
{
	echo "$@" > /dev/stderr
}

BOLD=$(tput bold)
RESET=$(tput sgr0)

DIR=$(pwd)
TMP=$(mktemp -d /tmp/jac.XXXXXXXX)
cp -r * "$TMP"
cd "$TMP"

javac *.java 2> >(grep -v '^Picked up _JAVA_OPTIONS:')
if [ $? != 0 ]; then
	cd "$DIR"
	rm -r "$TMP"
	exit 1
fi

RAN=0
for F in $(grep -il *.java -e 'public static void main'); do
	err
	NAME=$(sed 's/\.java$//' <<< "$F")
	err -n "$BOLD"
	err -n "java '$NAME'"
	for A in "$@"; do err -n " '$A'"; done
	err "$RESET"
	java "$NAME" "$@"
	RAN=1
done
[ "$RAN" != 1 ] && echo "${BOLD}No appropriate java files found.$RESET"

cd "$DIR"
rm -r "$TMP"
