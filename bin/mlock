#!/bin/bash

###################################
## This script locks the screen. ##
###################################

touch ~/.mlocked
TMP="$(mktemp /tmp/scrot.XXXXXXXX.png)"
scrot "$TMP"

convert "$TMP"   \
	-scale 5%    \
	-scale 2000% \
	"$TMP"

# composite -gravity center ~/assets/img/lock.png "$TMP" "$TMP"

i3lock -e -i "$TMP" -n

rm "$TMP"
rm ~/.mlocked
