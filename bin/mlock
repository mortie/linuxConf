#!/bin/bash

###################################
## This script locks the screen. ##
###################################

touch ~/.mlocked
SRC="$(mktemp /tmp/scrot.XXXXXXXX.bmp)"
DST="$(mktemp /tmp/scrot.XXXXXXXX.png)"
scrot "$SRC"

mnotifymsg "Lock."

convert "$SRC"   \
	-scale 5%    \
	-scale 2000% \
	"$DST"

# composite -gravity center ~/assets/img/lock.png "$TMP" "$TMP"

i3lock -e -i "$DST" -n

rm "$SRC" "$DST"
rm ~/.mlocked
