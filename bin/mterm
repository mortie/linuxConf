#!/bin/bash

####################################################
## This script starts a terminal, optionally with ##
## a window name and executing a command.         ##
####################################################

set -e

EXEC="$1"
NAME="$2"
DIR="$3"

function isterm()
{
	which "$1" &> /dev/null
}

declare -a args

if isterm termite; then
	cmd=termite
	if ! [ -z "$EXEC" ]; then
		args+=("-e")
		args+=("$EXEC")
	fi
	if ! [ -z "$NAME" ]; then
		args+=("--name")
		args+=("$NAME")
	fi
	if ! [ -z "$DIR" ]; then
		args+=("-d")
		args+=("$DIR")
	fi
else
	echo "No suitable terminal found."
	exit 1
fi

"$cmd" "${args[@]}"
